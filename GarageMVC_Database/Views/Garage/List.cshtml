@model IEnumerable<GarageMVC_Database.Models.Vehicle>

@{
    ViewBag.Title = "Search";
}

@*<h>Vehicle List</h>*@
@*<p>search</p>*@
<div class="Index_Menu">
    <div class="left">
        <form class="glyphicon glyphicon-search" method="get">
            <input type="text" name="Search" placeholder="Free Search" style="width:120px; height:25px;font-family: Helvetica, Arial, sans-serif" />
            <input id="vehicleType_Long" class="btn btn-primary" type="submit" value="Search" />
        </form>
    </div>
    <div class="center">
        <form method="post">
            <select name="Filter">
                <option value="" selected>Search type</option>
                <option value="Car">Car</option>
                <option value="Bus">Bus</option>
                <option value="Truck">Truck</option>
                <option value="Mc">Mc</option>
            </select>
            <input name="vehicleType_Long" class="btn btn-default" type="submit" value="Filter" />
        </form>
    </div>
    <div class="right">
        <input name="vehicleType_Long" type="submit" value="Revert" onclick="location.href='@Url.Action("List", "Garage")'" />
    </div>
    <p></p>
</div>
<table class="table">
    <tr>
        <th>
            <form method="post">
                <input type="submit" name="Sort" value="@Html.DisplayNameFor(model => model.RegNumber)" id="submit" />&#9660;
            </form>
        </th>
        <th>
            <form method="post">
                <input type="submit" name="Sort" value="@Html.DisplayNameFor(model => model.Owner)" id="submit" />&#9660;
            </form>
        </th>
        <th>
            <form method="post">
                <input type="submit" name="Sort" value="@Html.DisplayNameFor(model => model.VehicleType)" id="submit" />&#9660;
            </form>
        </th>
        <th>
            <form method="post">
                <input type="submit" name="Sort" value="@Html.DisplayNameFor(model => model.ParkingSpot)" id="submit" />&#9660;
            </form>
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingSpot)
            </td>

            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "ActionLink" }) |
                @Html.ActionLink("CheckOut", "CheckOut", new { id = item.ID }, new { @class = "ActionLink" })
            </td>
        </tr>
    }

</table>
